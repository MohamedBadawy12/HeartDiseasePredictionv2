@using Database.Enums;
@model HeartDiseasePrediction.ViewModel.MedicalTestViewModel
@{
    ViewData["Title"] = "Create Medical Test Page";
}

<section class="book_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col">
                <form asp-action="RegisterOfDoctor">
                    <h4>
                        Add <span>Medical Test</span>
                    </h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row ">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Age"></label>
                            <input asp-for="@Model.Age" type="number" class="form-control" id="inputAge" placeholder="Enter Age">
                            <span asp-validation-for="@Model.Age" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Gender"></label>
                            <select asp-for="@Model.Gender" class="form-control wide" id="inputGender" asp-items="Html.GetEnumSelectList<Gender>()">
                                <option value="NoSelected ">--Please Select Gender-- </option>
                            </select>
                            <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Smoking"></label>
                            <select asp-for="@Model.Smoking" class="form-control wide" id="inputSmoking">
                                <option value="NoSelected ">--Please Select Smoking-- </option>
                                <option value="1"> Yes </option>
                                <option value="0"> No </option>
                            </select>
                            <span asp-validation-for="@Model.Smoking" class="text-danger"></span>
                        </div>
                    </div>
                    @*<div class="form-row ">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Name">Name</label>
                            <input asp-for="@Model.Name" type="text" class="form-control" id="Name" placeholder="Enter Name">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.PhoneNumber"></label>
                            <input asp-for="@Model.PhoneNumber" type="number" class="form-control" id="inputPhone" placeholder="Enter Phone Number">
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.BirthDate"></label>
                            <div class="input-group date" id="inputDate" data-date-format="mm-dd-yyyy">
                                <input asp-for="@Model.BirthDate" type="text" class="form-control">
                                <span class="input-group-addon date_icon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                            <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Email"></label>
                            <input asp-for="@Model.Email" type="text" class="form-control" id="Email" placeholder="Enter Email">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Location">Location</label>
                            <input asp-for="@Model.Location" type="text" class="form-control" id="Location" placeholder="Enter Location">
                            <span asp-validation-for="@Model.Location" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Price">Price</label>
                            <input asp-for="@Model.Price" type="number" class="form-control" id="Price" placeholder="Enter Price">
                            <span asp-validation-for="@Model.Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.Password">Password</label>
                            <input asp-for="@Model.Password" type="password" class="form-control" id="Password" placeholder="Enter Password">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-4">
                            <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Enter Confirm Password">
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>*@
                    <div class="btn-box">
                        <button type="submit" class="btn ">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}