@model IEnumerable<Database.Entities.Appointment>
@{
    ViewBag.Title = "Appointments";
}

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h3>Appointments </h3>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="appointments" class=" data table table-striped no-margin">
                <thead>
                    <tr>
                        @*<th>Token</th>*@
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Doctor</th>
                        <th>Detail</th>
                        <th>Status</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>@item.Patient.Token</td>*@
                            <td>@item.Patient.User.FirstName</td>
                            <td>@item.Patient.User.LastName</td>
                            <td>@item.Patient.User.PhoneNumber</td>
                            <td>@item.StartTime?.ToString("MMM")-@item.StartTime?.ToString("d ")-@item.StartTime?.ToString("yyyy")</td>
                            <td>@item.StartTime?.ToString("HH:mm")</td>
                            <td>@item.Doctor.Name</td>
                            <td>@item.Detail</td>
                            <td>
                                @{
                                    if (item.Status == true)
                                    {
                                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:green " class="badge" readonly>Approved</a>
                                    }
                                    else
                                    {
                                        <a href="#" style="padding: 3px 10px 3px 10px; background-color:greenyellow" class="badge" readonly>Pending</a>
                                    }
                                }
                            </td>
                            <td><a href="@Url.Action("Edit","Appointment", new { id = item.Id})" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i>Edit</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $('#appointments').DataTable();
        });
    </script>
}