                                <input asp-for="@Model.BirthDate" type="datetime" class="form-control">
                                <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                            </div>
                            @*<div class="col-md-12">
                                <label asp-for="@Model.Password" class="labels"></label>
                                <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Enter Phone Nnumber" disabled value="">
                            </div>
                            <div class="col-md-12">
                                <label asp-for="@Model.ConfirmPassword" class="labels"></label>
                                <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" placeholder="Enter Phone Nnumber" disabled value="">
