                    </div>
                </div>
                <div class="col-md-6 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Profile Settings</h4>
                        </div>
                        <div class="row mt-2">
                            <input asp-for="@Model.Id" type="text" class="form-control" hidden placeholder="Id" value="">
                            <div class="col-md-6">
                                <label asp-for="@Model.FirstName class="labels"></label>
                                <input asp-for="@Model.FirstName" type="text" class="form-control" placeholder="First Name" value="">
                                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="@Model.LastName" class="labels"></label>
                                <input asp-for="@Model.LastName" type="text" class="form-control" value="" placeholder="Last Name">
                                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label asp-for="@Model.PhoneNumber" class="labels"></label>
                                <input asp-for="@Model.PhoneNumber" type="text" class="form-control" placeholder="Enter Phone Nnumber" value="">
                                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="@Model.Email" class="labels"></label>
                                <input asp-for="@Model.Email" type="text" class="form-control" placeholder="Enter Phone Nnumber" disabled value="">
                            </div>
                            @*<div class="col-md-12">
                                <label asp-for="@Model.Gender" class="labels"></label>
                                <select asp-for="@Model.Gender" class="form-control wide" id="inputGender" asp-items="Html.GetEnumSelectList<Gender>()">
                                    <option value="NoSelected ">--Please Select Gender-- </option>
                                </select>
                                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                            </div>*@
