@using Database.Enums;
@using HeartDiseasePrediction.ViewModel;
@model EditAccountProfile
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    @if (!string.IsNullOrEmpty(Model.ProfileImg))
    {
        <div class="col-md-4">
            <img src="/uploads/@Model.ProfileImg" style="width:250px;height:300px" />
        </div>
    }
    <div class="col-md-6">
        <form asp-action="UpdateProfile" id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="UserId" type="text" class="form-control" hidden />
            <div class="form-floating mb-3">
                <input asp-for="Email" type="text" class="form-control" placeholder="Please choose your Email." disabled />
                <label asp-for="Email" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="FirstName" type="text" class="form-control" placeholder="Please enter your FirstName " />
                <label asp-for="FirstName" class="form-label"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LastName" type="text" class="form-control" placeholder="Please enter your LastName " />
                <label asp-for="LastName" class="form-label"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="PhoneNumber" class="form-label"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>    
            <div class="form-group mb-3">
                <label asp-for="BirthDate" class="form-label"></label>
                <div class="input-group date" id="inputDate" data-date-format="mm-dd-yyyy">
                    <input asp-for="@Model.BirthDate" type="date" class="form-control" readonly>
                    <span class="input-group-addon date_icon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                    </span>
                </div>
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Gender"></label>
                <select asp-for="@Model.Gender" class="form-control wide" id="inputGender" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option value="NoSelected ">--Please Select Gender-- </option>
                </select>
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="m-2">
                <label class="form-label" for="ProfilePicture">Profile picture</label>
                <input asp-for="ImageFile" />
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-success">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}