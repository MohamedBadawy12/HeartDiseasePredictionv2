@model Database.Entities.Prescription

@{
    ViewData["Title"] = "Prescription Details Page";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style type="text/css">
    body {
        margin-top: 20px;
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

    .gutters-sm > .col, .gutters-sm > [class*=col-] {
         padding-right: 8px;
         padding-left: 8px;
    }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }

</style>

<div class="container ">
    <div class="main-body">
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Prescription Details</li>
            </ol>
        </nav>
    </div>
    <div class="row gutters-sm">
        <div class="col-md-8 offset-2">
            <div class="card mb-3">
                <div class="card-body">
                   @* <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Pateint Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Patientt.FirstName @Model.Patientt.LastName
                        </div>
                    </div>
                    <hr>*@
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Pateint Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.PatientEmail
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Pateint SSN</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.PatientSSN
                        </div>
                    </div>
                    <hr>
                    @*<div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Doctor</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Doctorr.FirstName @Model.Doctorr.LastName
                        </div>
                    </div>
                    <hr>*@
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Doctor Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.DoctorEmail
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Doctor</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.DoctorId
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Date</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.date.ToString("dd MMM yy")
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Medicine Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.MedicineName
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
